<!DOCTYPE html>
<html lang="en">

@using Microsoft.AspNetCore.Identity
@using FutureTechnologyE_Commerce.Models
@using FutureTechnologyE_Commerce.Utility
@inject SignInManager<ApplicationUser> SignInManager

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <meta name="description" content="Future Technology E-Commerce - Your one-stop shop for the latest tech gadgets, laptops, smartphones, and accessories." />
    <title>@ViewData["Title"] - Future Technology E-Commerce</title>
    
    <!-- Critical CSS inlined for fastest rendering -->
    <style>
        :root {
            --primary-color: #4a90e2;
            --primary-hover: #357abd;
            --secondary-color: #f8f9fa;
            --text-color: #2c3e50;
            --text-muted: #95a5a6;
            --border-color: #e9ecef;
            --shadow-color: rgba(0, 0, 0, 0.08);
        }

        body {
            font-family: 'Inter', sans-serif;
            color: var(--text-color);
            background-color: #f8f9fa;
            margin: 0;
            padding: 0;
        }
        
        /* Critical path CSS to prevent layout shift */
        .container-fluid {
            width: 100%;
            padding-right: 15px;
            padding-left: 15px;
            margin-right: auto;
            margin-left: auto;
        }
        
        img {
            max-width: 100%;
            height: auto;
        }
    </style>
    
    <!-- Preload fonts -->
    <link rel="preload" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" as="style" onload="this.onload=null;this.rel='stylesheet'">
    <noscript><link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap"></noscript>
    
    <!-- Core CSS -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    
    <!-- Defer non-critical CSS -->
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" media="print" onload="this.media='all'">
    <noscript><link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css"></noscript>
    
    <link rel="stylesheet" href="~/css/style.css" asp-append-version="true" />
    
    <!-- Deferred non-critical CSS -->
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" media="print" onload="this.media='all'" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css" media="print" onload="this.media='all'" />
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css" media="print" onload="this.media='all'" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.css" media="print" onload="this.media='all'" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" media="print" onload="this.media='all'" />

    <!-- Additional styles from views -->
    @await RenderSectionAsync("Styles", required: false)
</head>
<body>
    <!-- ... existing body content ... -->
    
    @RenderBody()
    
    <!-- ... existing body content ... -->

    <!-- Core JS -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/scripts/image-optimizer.js" asp-append-version="true"></script>
    <script src="~/scripts/performance-utils.js" asp-append-version="true"></script>
    
    <!-- Defer non-critical JS -->
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/chart.js" defer></script>
    <script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js" defer></script>
    <script src="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick.min.js" defer></script>

    <!-- Page-specific scripts -->
    @await RenderSectionAsync("Scripts", required: false)
    
    <script>
        // Initialize any global functionality
        $(document).ready(function () {
            // Handle dropdown item selection for search
            $('.dropdown-item').click(function (e) {
                var selectedValue = $(this).data('value');
                if (selectedValue !== undefined) {
                    e.preventDefault();
                    var selectedText = $(this).text().trim();
                    $('#searchCategoryDropdown').text(selectedText);
                    $('#selectedCategory').val(selectedValue);
                }
            });
        });
    </script>
</body>
</html> 