<!-- OrderConfirmation.cshtml -->
@model FutureTechnologyE_Commerce.Models.ViewModels.OrderConfirmationViewModel

<div class="container my-5 py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <!-- Success Header -->
                <div class="card-header bg-gradient text-white text-center py-5"
                     style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
                    <i class="bi bi-check-circle-fill display-1 mb-3"></i>
                    <h3 class="fw-bold mb-0">Order Confirmed!</h3>
                    <p class="lead">Your order #@Model.OrderId has been successfully placed</p>
                    <small class="text-light">Placed on @Model.OrderDate.ToString("MMMM dd, yyyy")</small>
                </div>

                <!-- Order Details -->
                <div class="card-body p-4">
                    <div class="row g-4">
                        <!-- Order Summary -->
                        <div class="col-12 col-md-8">
                            <div class="card border-0 shadow-sm rounded-4">
                                <div class="card-header bg-light">
                                    <h5 class="m-0 text-primary">Order Summary</h5>
                                </div>
                                <div class="list-group list-group-flush">
                                    @foreach (var item in Model.OrderItems)
                                    {
                                        <div class="list-group-item px-0">
                                            <div class="row align-items-center">
                                                <div class="col-3">
                                                    <img src="@item.ImageUrl"
                                                         class="img-fluid rounded-3"
                                                         style="aspect-ratio: 1/1; object-fit: cover;">
                                                </div>
                                                <div class="col-6">
                                                    <h6 class="mb-1">@item.ProductName</h6>
                                                    <small class="text-muted">Qty: @item.Quantity</small>
                                                </div>
                                                <div class="col-3 text-end">
                                                    <span class="fw-semibold">@item.Total.ToString("c")</span>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between fw-bold">
                                        <span>Total</span>
                                        <span>@Model.OrderTotal.ToString("c")</span>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Delivery Information -->
                        <div class="col-12 col-md-4">
                            <div class="card border-0 shadow-sm rounded-4">
                                <div class="card-header bg-light">
                                    <h5 class="m-0 text-primary">Delivery</h5>
                                </div>
                                <div class="card-body">
                                    <p class="mb-0">
                                        <i class="bi bi-truck me-2"></i>
                                        Estimated Delivery: <br>
                                        <strong>@Model.EstimatedDeliveryDate.ToString("MMMM dd, yyyy")</strong>
                                    </p>
                                    <hr>
                                    <p class="mb-0">
                                        <i class="bi bi-geo-alt me-2"></i>
                                        Shipping to: <br>
                                        @Model.ShippingAddress.FullName<br>
                                        @Model.ShippingAddress.Street<br>
                                        @Model.ShippingAddress.City, @Model.ShippingAddress.State<br>
                                        @Model.ShippingAddress.PostalCode
                                    </p>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="card-footer bg-white border-0">
                    <div class="row g-3 px-4 py-4">
                        <div class="col-12 col-md-6">
                            <a asp-controller="Home" asp-action="Index"
                               class="btn btn-outline-primary w-100 rounded-pill">
                                Continue Shopping
                            </a>
                        </div>
                        <div class="col-12 col-md-6">
                            <a asp-controller="Order" asp-action="Track" asp-route-id="@Model.OrderId"
                               class="btn btn-primary w-100 rounded-pill"
                               style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
                                Track Order <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>