<!-- OrderConfirmation.cshtml -->
@model FutureTechnologyE_Commerce.Models.ViewModels.OrderDetailsViewModel

<div class="container my-5 py-5">
    <div class="row justify-content-center">
        <div class="col-lg-9">
            <div class="card shadow-sm border-0 rounded-4 overflow-hidden">
                <!-- Success Header -->
                <div class="card-header bg-gradient text-white text-center py-5"
                     style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
                    <i class="bi bi-check-circle-fill display-1 mb-3"></i>
                    <h3 class="fw-bold mb-0">Order Confirmed!</h3>
                    <p class="lead">Your order #@Model.OrderHeader.Id has been successfully placed</p>
                    <small class="text-light">Placed on @Model.OrderHeader.OrderDate.ToString("MMMM dd, yyyy")</small>
                </div>

                <!-- Order Details -->
                <div class="card-body p-4">
                    <div class="row g-4">
                        <!-- Order Summary -->
                        <div class="col-12 col-md-8">
                            <div class="card border-0 shadow-sm rounded-4">
                                <div class="card-header bg-light">
                                    <h5 class="m-0 text-primary">Order Summary</h5>
                                </div>
                                <div class="list-group list-group-flush">
                                    @foreach (var item in Model.OrderDetails)
                                    {
                                        <div class="list-group-item px-0">
                                            <div class="row align-items-center">
                                                <div class="col-3">
                                                    <img src="@(item.Product.ImageUrl ?? "/images/placeholder.png")"
                                                         class="img-fluid rounded-3"
                                                         style="aspect-ratio: 1/1; object-fit: cover;">
                                                </div>
                                                <div class="col-6">
                                                    <h6 class="mb-1">@item.Product.Name</h6>
                                                    <small class="text-muted">Qty: @item.Count</small>
                                                    @if (item.Product.Brand != null && !string.IsNullOrEmpty(item.Product.Brand.Name))
                                                    {
                                                        <p class="text-muted small mb-0">
                                                            <span>Brand: @item.Product.Brand.Name</span>
                                                        </p>
                                                    }
                                                </div>
                                                <div class="col-3 text-end">
                                                    <span class="fw-semibold">EGP @item.Price.ToString("0.00")</span>
                                                </div>
                                            </div>
                                        </div>
                                    }
                                </div>
                                <div class="card-footer bg-transparent">
                                    <div class="d-flex justify-content-between fw-bold">
                                        <span>Total</span>
                                        <span>EGP @Model.OrderHeader.OrderTotal.ToString("0.00")</span>
                                    </div>
                                </div>
                            </div>
                            
                            <!-- Payment Information -->
                            <div class="card border-0 shadow-sm rounded-4 mt-4">
                                <div class="card-header bg-light">
                                    <h5 class="m-0 text-primary">Payment Information</h5>
                                </div>
                                <div class="card-body">
                                    @if (Model.OrderHeader.PaymentMethod == FutureTechnologyE_Commerce.Utility.SD.Payment_Method_COD)
                                    {
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-cash-coin text-success fs-4 me-3"></i>
                                            <div>
                                                <h6 class="mb-0">Cash on Delivery</h6>
                                                <small class="text-muted">Pay when your order arrives</small>
                                            </div>
                                        </div>
                                        <div class="alert alert-info mt-3 mb-0">
                                            <i class="bi bi-info-circle me-2"></i>
                                            Please have the exact amount ready when your order arrives.
                                        </div>
                                    }
                                    else
                                    {
                                        <div class="d-flex align-items-center mb-2">
                                            <i class="bi bi-credit-card text-primary fs-4 me-3"></i>
                                            <div>
                                                <h6 class="mb-0">Online Payment</h6>
                                                <small class="text-muted">Payment Status: <span class="@(Model.OrderHeader.PaymentStatus == FutureTechnologyE_Commerce.Utility.SD.Payment_Status_Approved ? "text-success" : "text-warning")">
                                                    @Model.OrderHeader.PaymentStatus
                                                </span></small>
                                            </div>
                                        </div>
                                    }
                                </div>
                            </div>
                        </div>

                        <!-- Delivery Information -->
                        <div class="col-12 col-md-4">
                            <div class="card border-0 shadow-sm rounded-4">
                                <div class="card-header bg-light">
                                    <h5 class="m-0 text-primary">Delivery</h5>
                                </div>
                                <div class="card-body">
                                    <p class="mb-0">
                                        <i class="bi bi-truck me-2"></i>
                                        Estimated Delivery: <br>
                                        <strong>@Model.OrderHeader.OrderDate.AddDays(5).ToString("MMMM dd, yyyy")</strong>
                                    </p>
                                    <hr>
                                    <p class="mb-2">
                                        <i class="bi bi-geo-alt me-2"></i>
                                        Shipping to:
                                    </p>
                                    <address class="mb-0">
                                        <strong>@($"{Model.OrderHeader.first_name} {Model.OrderHeader.last_name}")</strong><br>
                                        @Model.OrderHeader.street<br>
                                        @(Model.OrderHeader.building != "" ? "Building " + Model.OrderHeader.building + "<br>" : "")
                                        @(Model.OrderHeader.floor != "" ? "Floor " + Model.OrderHeader.floor + "<br>" : "")
                                        @Model.OrderHeader.state, Egypt
                                    </address>
                                </div>
                            </div>
                            
                            <!-- Order Status -->
                            <div class="card border-0 shadow-sm rounded-4 mt-4">
                                <div class="card-header bg-light">
                                    <h5 class="m-0 text-primary">Order Status</h5>
                                </div>
                                <div class="card-body">
                                    <div class="d-flex align-items-center">
                                        <i class="bi bi-clipboard-check fs-4 me-3 text-success"></i>
                                        <div>
                                            <h6 class="mb-0">@Model.OrderHeader.OrderStatus</h6>
                                            <small class="text-muted">Last updated: @Model.OrderHeader.OrderDate.ToString("MMMM dd, yyyy")</small>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Action Buttons -->
                <div class="card-footer bg-white border-0">
                    <div class="row g-3 px-4 py-4">
                        <div class="col-12 col-md-6">
                            <a asp-controller="Home" asp-action="Index"
                               class="btn btn-outline-primary w-100 rounded-pill">
                                Continue Shopping
                            </a>
                        </div>
                        <div class="col-12 col-md-6">
                            <a asp-controller="Order" asp-action="Track" asp-route-id="@Model.OrderHeader.Id"
                               class="btn btn-primary w-100 rounded-pill"
                               style="background: linear-gradient(135deg, #6a11cb 0%, #2575fc 100%);">
                                Track Order <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>