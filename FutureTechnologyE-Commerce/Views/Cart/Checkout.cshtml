    .card {
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .card:hover {
            transform: translateY(-2px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

    @@media (max-width: 768px) {
        .card-header {
            border-bottom: none;
        }

        .form-control-lg {
