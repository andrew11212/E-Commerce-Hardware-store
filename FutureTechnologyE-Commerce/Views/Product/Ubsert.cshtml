@model FutureTechnologyE_Commerce.Models.ViewModels.ProductViewModel
@{
    ViewBag.Title = "Manage Product";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-dark  text-white rounded-top-4">
                    <h3 class="mb-0 text-white">@($"{(Model.Product.ProductID != 0 ? "Update" : "Create")} Product")</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Product" asp-action="Ubsert" method="post" enctype="multipart/form-data" class="row g-3">
                        @Html.AntiForgeryToken()

                        @if (Model.Product.ProductID != 0)
                        {
                            <input type="hidden" asp-for="Product.ProductID" />
                            <input type="hidden" asp-for="Product.ImageUrl" />
                        }

                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="Product.Name" class="form-control border-0 shadow-sm" placeholder="Product Name" />
                                <label asp-for="Product.Name" class="form-label"></label>
                                <span asp-validation-for="Product.Name" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <textarea asp-for="Product.Description" class="form-control border-0 shadow-sm" placeholder="Description" style="height: 150px"></textarea>
                                <label asp-for="Product.Description" class="form-label"></label>
                                <span asp-validation-for="Product.Description" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Product.Price" class="form-control border-0 shadow-sm" placeholder="Price" type="number" step="0.01" />
                                <label asp-for="Product.Price" class="form-label"></label>
                                <span asp-validation-for="Product.Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Product.StockQuantity" class="form-control border-0 shadow-sm" placeholder="Stock Quantity" type="number" />
                                <label asp-for="Product.StockQuantity" class="form-label"></label>
                                <span asp-validation-for="Product.StockQuantity" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-md-4">
                            <div class="form-floating">
                                <select asp-for="Product.CategoryID" asp-items="Model.CategoryList" class="form-select border-0 shadow-sm">
                                    <option value="">Select Category</option>
                                </select>
                                <label asp-for="Product.CategoryID" class="form-label"></label>
                                <span asp-validation-for="Product.CategoryID" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-4">
                            <div class="form-floating">
                                <select asp-for="Product.BrandID" asp-items="Model.BrandList" class="form-select border-0 shadow-sm">
                                    <option value="">Select Brand</option>
                                </select>
                                <label asp-for="Product.BrandID" class="form-label"></label>
                                <span asp-validation-for="Product.BrandID" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-12">
                            <div class="form-floating">
                                <input type="file" name="file" class="form-control border-0 shadow-sm" accept="image/*" onchange="previewImage(event)" />
                                <label asp-for="Product.ImageUrl" class="form-label"></label>
                            </div>
                            <div class="mt-3">
                                <img id="imagePreview" src="@Model.Product.ImageUrl" class="img-thumbnail rounded-3" style="max-height: 200px; display: none;" />
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-check">
                                <input asp-for="Product.IsBestseller" class="form-check-input" type="checkbox" id="isBestsellerCheck">
                                <label class="form-check-label" for="isBestsellerCheck">
                                    Is Best Seller
                                </label>
                            </div>
                        </div>

                        <div class="col-12 d-flex justify-content-between">
                            <a asp-controller="Product" asp-action="Index" class="btn btn-lg btn-secondary rounded-pill px-4">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-lg btn-primary rounded-pill px-4">
                                <i class="bi bi-save"></i> @($"{(Model.Product.ProductID != 0 ? "Update" : "Create")} Product")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Image preview handler
        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function () {
                const preview = document.getElementById('imagePreview');
                preview.src = reader.result;
                preview.style.display = 'block';
            }
            reader.readAsDataURL(event.target.files[0]);
        }
    </script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}