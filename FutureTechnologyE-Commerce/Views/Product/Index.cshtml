@model IEnumerable<Product>

@{
    ViewBag.Title = "Product List";
}

<div class="col-12 d-flex justify-content-end mb-3">
    <a asp-controller="Product" asp-action="Ubsert" class="btn btn-primary shadow-sm">
        <i class="bi bi-patch-plus"></i> Create New Product
    </a>
</div>

<div class="card shadow border-0">
    <div class="card-header bg-secondary text-light text-center">
        <h2 class="m-0">Products</h2>
    </div>
    <div class="card-body">
        <table id="myTable" class="table table-hover table-striped table-bordered text-center align-middle" width="100%">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Description</th>
                    <th>Price</th>
                    <th>Category</th>
                    <th>Brand</th>
                    <th>Stock</th>
                    <th>Best Seller</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script src="~/js/Product.js"></script>
}