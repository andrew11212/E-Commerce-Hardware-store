@model FutureTechnologyE_Commerce.Models.ViewModels.UserEditViewModel
@{
    ViewData["Title"] = "Edit User";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container p-4">
    <div class="row">
        <div class="col-md-8 mx-auto">
            <div class="card shadow">
                <div class="card-header bg-primary text-white">
                    <h4 class="mb-0">
                        <i class="bi bi-person-fill-gear me-2"></i>Edit User
                    </h4>
                </div>
                <div class="card-body">
                    <form method="post" asp-action="EditUser">
                        <input type="hidden" asp-for="Id" />
                        
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        
                        <div class="row mb-3">
                            <div class="col-md-6">
                                <label asp-for="FirstName" class="form-label">First Name</label>
                                <input asp-for="FirstName" class="form-control" />
                                <span asp-validation-for="FirstName" class="text-danger"></span>
                            </div>
                            <div class="col-md-6">
                                <label asp-for="LastName" class="form-label">Last Name</label>
                                <input asp-for="LastName" class="form-control" />
                                <span asp-validation-for="LastName" class="text-danger"></span>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Email" class="form-label">Email</label>
                            <input asp-for="Email" class="form-control" readonly />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="UserName" class="form-label">Username</label>
                            <input asp-for="UserName" class="form-control" readonly />
                            <span asp-validation-for="UserName" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="PhoneNumber" class="form-label">Phone Number</label>
                            <input asp-for="PhoneNumber" class="form-control" />
                            <span asp-validation-for="PhoneNumber" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3">
                            <label asp-for="Role" class="form-label">Role</label>
                            <select asp-for="Role" asp-items="Model.RolesList" class="form-select"></select>
                            <span asp-validation-for="Role" class="text-danger"></span>
                        </div>
                        
                        <div class="mb-3 form-check">
                            <input asp-for="LockoutEnabled" class="form-check-input" id="lockoutToggle" onchange="toggleLockoutDate()" />
                            <label asp-for="LockoutEnabled" class="form-check-label">Account Locked</label>
                        </div>
                        
                        <div class="mb-3" id="lockoutDateGroup" style="display: none;">
                            <label asp-for="LockoutEnd" class="form-label">Locked Until</label>
                            <input asp-for="LockoutEnd" class="form-control" type="datetime-local" />
                            <span asp-validation-for="LockoutEnd" class="text-danger"></span>
                        </div>
                        
                        <div class="d-flex justify-content-between">
                            <a asp-action="UserManagement" class="btn btn-outline-secondary">
                                <i class="bi bi-arrow-left me-1"></i>Back to List
                            </a>
                            <button type="submit" class="btn btn-primary">
                                <i class="bi bi-save me-1"></i>Save Changes
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        function toggleLockoutDate() {
            const lockoutToggle = document.getElementById('lockoutToggle');
            const lockoutDateGroup = document.getElementById('lockoutDateGroup');
            
            if (lockoutToggle.checked) {
                lockoutDateGroup.style.display = 'block';
            } else {
                lockoutDateGroup.style.display = 'none';
            }
        }
        
        // Initialize on page load
        document.addEventListener('DOMContentLoaded', function() {
            toggleLockoutDate();
        });
    </script>
} 