@model IEnumerable<FutureTechnologyE_Commerce.Models.OrderHeader>
@using FutureTechnologyE_Commerce.Utility

@{
    ViewData["Title"] = "Order History";
}

<div class="container py-5">
    <div class="row mb-4">
        <div class="col-md-6">
            <h2 class="fw-bold">Your Orders</h2>
        </div>
        <div class="col-md-6 text-md-end">
            <a asp-controller="Home" asp-action="Index" class="btn btn-outline-primary">
                <i class="bi bi-arrow-left me-2"></i>Back to Shopping
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="card shadow-sm border-0 rounded-3 p-4 text-center">
            <div class="card-body">
                <i class="bi bi-bag text-muted" style="font-size: 4rem;"></i>
                <h4 class="mt-3">You haven't placed any orders yet</h4>
                <p class="text-muted">Start shopping and your orders will appear here</p>
                <a asp-controller="Home" asp-action="Index" class="btn btn-primary px-4 mt-2">
                    Start Shopping
                </a>
            </div>
        </div>
    }
    else
    {
        <div class="row">
            @foreach (var order in Model)
            {
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm border-0 rounded-3 h-100">
                        <div class="card-header bg-white border-0 pt-4 pb-0">
                            <div class="row align-items-center">
                                <div class="col">
                                    <span class="text-muted small">ORDER PLACED</span>
                                    <div>@order.OrderDate.ToString("MMM d, yyyy")</div>
                                </div>
                                <div class="col text-center">
                                    <span class="text-muted small">TOTAL</span>
                                    <div>EGP @order.OrderTotal.ToString("0.00")</div>
                                </div>
                                <div class="col text-end">
                                    <span class="text-muted small">ORDER #</span>
                                    <div>@order.Id</div>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card-body">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <h5 class="mb-0">Status: 
                                    @{
                                        string badgeClass = "badge-soft-info";
                                        if (order.OrderStatus == SD.Status_Approved)
                                            badgeClass = "badge-soft-warning";
                                        else if (order.OrderStatus == SD.Status_Processing)
                                            badgeClass = "badge-soft-info";
                                        else if (order.OrderStatus == SD.Status_Shipped)
                                            badgeClass = "badge-soft-success";
                                        else if (order.OrderStatus == SD.Status_Cancelled)
                                            badgeClass = "badge-soft-danger";
                                    }
                                    <span class="badge @badgeClass">@order.OrderStatus</span>
                                </h5>
                            </div>
                            
                            <p class="text-muted mb-1">
                                Shipping to: @order.first_name @order.last_name
                            </p>
                            <p class="text-muted small mb-3">
                                @order.street, @order.building, @order.state
                            </p>
                        </div>
                        
                        <div class="card-footer bg-white pt-0 border-0">
                            <div class="row g-2 mb-2">
                                <div class="col">
                                    <a asp-controller="Order" asp-action="Details" asp-route-id="@order.Id" 
                                       class="btn btn-outline-primary w-100">
                                        <i class="bi bi-info-circle me-1"></i> Details
                                    </a>
                                </div>
                                <div class="col">
                                    <a asp-controller="Order" asp-action="Track" asp-route-id="@order.Id" 
                                       class="btn btn-primary w-100">
                                        <i class="bi bi-truck me-1"></i> Track
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    }
</div>

@section Styles {
    <style>
        .badge-soft-success {
            color: #0f5132;
            background-color: #d1e7dd;
        }
        .badge-soft-danger {
            color: #842029;
            background-color: #f8d7da;
        }
        .badge-soft-warning {
            color: #664d03;
            background-color: #fff3cd;
        }
        .badge-soft-info {
            color: #055160;
            background-color: #cff4fc;
        }
    </style>
} 