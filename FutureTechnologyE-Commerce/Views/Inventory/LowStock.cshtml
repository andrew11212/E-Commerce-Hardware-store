@model FutureTechnologyE_Commerce.Models.ViewModels.LowStockViewModel

@{
    ViewData["Title"] = "Low Stock Alerts";
}

<div class="container p-4">
    <div class="row mb-4">
        <div class="col">
            <h2 class="text-primary fw-bold">
                <i class="bi bi-exclamation-triangle me-2"></i>Low Stock Alerts
            </h2>
            <p class="text-muted">Products that need inventory replenishment</p>
        </div>
        <div class="col text-end">
            <a asp-action="Index" class="btn btn-outline-secondary">
                <i class="bi bi-arrow-left"></i> Back to Inventory
            </a>
            <a asp-action="BulkUpdate" class="btn btn-success">
                <i class="bi bi-arrow-repeat"></i> Bulk Update
            </a>
        </div>
    </div>

    @if (Model.LowStockItems.Count == 0)
    {
        <div class="alert alert-success">
            <div class="d-flex align-items-center">
                <i class="bi bi-check-circle-fill fs-2 me-3"></i>
                <div>
                    <h5 class="alert-heading">All Good!</h5>
                    <p class="mb-0">There are no products with low stock levels at the moment.</p>
                </div>
            </div>
        </div>
    }
    else
    {
        <div class="alert alert-warning mb-4">
            <div class="d-flex align-items-center">
                <i class="bi bi-exclamation-triangle-fill fs-2 me-3"></i>
                <div>
                    <h5 class="alert-heading">Attention Needed!</h5>
                    <p class="mb-0">
                        @Model.LowStockItems.Count products have stock levels below their threshold and need attention.
                    </p>
                </div>
            </div>
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table id="lowStockTable" class="table table-hover">
                        <thead class="bg-light">
                            <tr>
                                <th>Product</th>
                                <th>Current Stock</th>
                                <th>Threshold</th>
                                <th>Status</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model.LowStockItems.OrderBy(i => i.CurrentStock))
                            {
                                var stockPercentage = (item.CurrentStock * 100) / item.LowStockThreshold;
                                var stockClass = "";
                                var stockLabel = "";

                                if (item.CurrentStock == 0)
                                {
                                    stockClass = "bg-danger";
                                    stockLabel = "Out of Stock";
                                }
                                else if (stockPercentage < 25)
                                {
                                    stockClass = "bg-danger";
                                    stockLabel = "Critical";
                                }
                                else if (stockPercentage < 50)
                                {
                                    stockClass = "bg-warning";
                                    stockLabel = "Very Low";
                                }
                                else
                                {
                                    stockClass = "bg-warning text-dark";
                                    stockLabel = "Low";
                                }

                                <tr>
                                    <td class="fw-medium">@item.ProductName</td>
                                    <td class="text-center fw-bold">@item.CurrentStock</td>
                                    <td class="text-center">@item.LowStockThreshold</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="progress flex-grow-1" style="height: 8px;">
                                                <div class="progress-bar @stockClass" role="progressbar" 
                                                    style="width: @Math.Min(stockPercentage, 100)%"></div>
                                            </div>
                                            <span class="badge ms-2 @stockClass">@stockLabel</span>
                                        </div>
                                    </td>
                                    <td>
                                        <a asp-action="AdjustStock" asp-route-id="@item.InventoryId" class="btn btn-sm btn-success">
                                            <i class="bi bi-plus-circle me-1"></i> Restock
                                        </a>
                                        <a asp-action="Details" asp-route-id="@item.InventoryId" class="btn btn-sm btn-info text-white">
                                            <i class="bi bi-info-circle"></i>
                                        </a>
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#lowStockTable').DataTable({
                "order": [[1, "asc"]],
                "language": {
                    "search": "Search low stock items:"
                }
            });
        });
    </script>
} 