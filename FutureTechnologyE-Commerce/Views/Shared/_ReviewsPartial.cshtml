@model IEnumerable<FutureTechnologyE_Commerce.Models.Review>
@using System.Security.Claims

@{
    var userId = User.FindFirstValue(ClaimTypes.NameIdentifier);
    var isAdmin = User.IsInRole("Admin");
}

<div class="reviews-section mt-4">
    <h3>Customer Reviews</h3>
    
    @if (User.Identity.IsAuthenticated)
    {
        <div class="mb-3">
            <a asp-controller="Review" asp-action="Create" asp-route-productId="@ViewBag.ProductId" class="btn btn-outline-primary">
                <i class="bi bi-pencil"></i> Write a Review
            </a>
        </div>
    }

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            This product doesn't have any reviews yet. Be the first to review it!
        </div>
    }
    else
    {
        <div class="avg-rating mb-3">
            <h4>
                <span>@ViewBag.AverageRating.ToString("0.0")</span>
                <span class="text-warning">
                    @for (int i = 1; i <= 5; i++)
                    {
                        if (i <= Math.Round(ViewBag.AverageRating))
                        {
                            <i class="bi bi-star-fill"></i>
                        }
                        else if (i - 0.5 <= ViewBag.AverageRating)
                        {
                            <i class="bi bi-star-half"></i>
                        }
                        else
                        {
                            <i class="bi bi-star"></i>
                        }
                    }
                </span>
                <span class="text-muted">(@Model.Count() reviews)</span>
            </h4>
        </div>

        <div class="reviews-list">
            @foreach (var review in Model)
            {
                <div class="card mb-3">
                    <div class="card-body">
                        <div class="d-flex justify-content-between align-items-center mb-2">
                            <div>
                                <h5 class="mb-0">@review.User.first_name @review.User.last_name</h5>
                                <small class="text-muted">@review.ReviewDate.ToString("MMMM dd, yyyy")</small>
                            </div>
                            <div class="text-warning">
                                @for (int i = 1; i <= 5; i++)
                                {
                                    if (i <= review.Rating)
                                    {
                                        <i class="bi bi-star-fill"></i>
                                    }
                                    else
                                    {
                                        <i class="bi bi-star"></i>
                                    }
                                }
                            </div>
                        </div>
                        
                        <p class="card-text">@review.Comment</p>
                        
                        @if (userId == review.UserID || isAdmin)
                        {
                            <div class="mt-2">
                                <a asp-controller="Review" asp-action="Edit" asp-route-id="@review.ReviewID" class="btn btn-sm btn-outline-secondary">
                                    <i class="bi bi-pencil"></i> Edit
                                </a>
                                <form asp-controller="Review" asp-action="Delete" asp-route-id="@review.ReviewID" method="post" class="d-inline">
                                    <button type="submit" class="btn btn-sm btn-outline-danger" onclick="return confirm('Are you sure you want to delete this review?')">
                                        <i class="bi bi-trash"></i> Delete
                                    </button>
                                </form>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    }
</div> 