    <script>
        // Category filter functionality
        $(document).ready(function () {
            // Fix the Content Management dropdown positioning
            $('.navbar-nav .dropdown').on('show.bs.dropdown', function () {
                $(this).find('.dropdown-menu').css({
                    'display': 'block',
                    'opacity': 0
                }).animate({
                    'opacity': 1,
                    'margin-top': '0.25rem'
                }, 200);
            });

            // Smooth hide animation
            $('.navbar-nav .dropdown').on('hide.bs.dropdown', function () {
                $(this).find('.dropdown-menu').animate({
                    'opacity': 0,
                    'margin-top': '0'
                }, 200, function () {
                    $(this).css('display', 'none');
                });
                return false; // This prevents the immediate hide, allowing our animation to complete
            });

            // Auto-close when clicking outside
            $(document).on('click', function (e) {
                if (!$(e.target).closest('.dropdown').length) {
                    $('.navbar-nav .dropdown .dropdown-menu').css({
                        'display': 'none',
                        'opacity': 0,
                        'margin-top': '0'
                    });
                }
            });
            
            // Search form enhancements
            const searchInput = $('input[name="searchString"]');
            const searchForm = $('#searchForm');
            const categoryFilter = $('#categoryFilter');
            
            // Add focus effect
            searchInput.on('focus', function() {
                $(this).closest('.input-group').addClass('focused');
            });
            
            searchInput.on('blur', function() {
                $(this).closest('.input-group').removeClass('focused');
            });
            
            // Visual feedback on category change
            categoryFilter.on('change', function() {
                $(this).addClass('changed');
                setTimeout(() => {
                    $(this).removeClass('changed');
                }, 300);
            });
            
            // Handle search form submission
            $('#searchForm').on('submit', function(e) {
                e.preventDefault();
                const selectedCategory = $('#categoryFilter').val();
                const searchText = $('input[name="searchString"]').val();
                const form = $(this);
                
                console.log('Form submit - Category:', selectedCategory, 'Search:', searchText);
                
                if (selectedCategory === "") {
                    // All Products
                    form.attr('action', '@Url.Content("~/Home/GetAllProducts")');
                } else if (selectedCategory === "Laptops") {
                    // Redirect to Laptops with search
                    form.attr('action', '@Url.Content("~/Home/GetAllLaptops")');
                } else {
                    // Other categories
                    form.attr('action', '@Url.Content("~/Home/GetFilteredProducts")');
                }
                
                form.off('submit').submit();
            });
            
            // Handle category filter change
            $('#categoryFilter').change(function() {
                const selectedCategory = $(this).val();
                console.log('Selected category:', selectedCategory);
                const form = $(this).closest('form');
                
                // Special handling for specific categories
                if (selectedCategory === "") {
                    // All Products
                    console.log('Redirecting to All Products');
                    window.location.href = '@Url.Content("~/Home/GetAllProducts")';
                    return false;
                } else if (selectedCategory === "Laptops") {
                    // Laptops
                    console.log('Redirecting to Laptops');
                    window.location.href = '@Url.Content("~/Home/GetAllLaptops")';
                    return false;
                } else if (selectedCategory === "Bestseller") {
                    // Best Sellers needs to use GetFilteredProducts action
                    console.log('Submitting form for Best Sellers');
                    form.attr('action', '@Url.Content("~/Home/GetFilteredProducts")');
                    form.submit();
                    return false;
                } else {
                    // For other categories (Mouse, Keyboard, Storage, Printer, Accessories)
                    console.log('Submitting form for category:', selectedCategory);
                    form.attr('action', '@Url.Content("~/Home/GetFilteredProducts")');
                    form.submit();
                    return false;
                }
            });
        });
    </script>

    @if (SignInManager.IsSignedIn(User))
    {
        <script>
            $(document).ready(function() {
                // Load notifications on page load
                loadNotifications();
                
                // Load notifications when dropdown is opened
                $('#notificationsDropdown').on('show.bs.dropdown', function() {
                    loadNotifications();
                });
                
                // Mark notification as read when clicked
                $(document).on('click', '.notification-item', function(e) {
                    // Don't trigger if clicking buttons or links
                    if ($(e.target).closest('button, a').length === 0) {
                        const notificationId = $(this).data('notification-id');
                        const actionUrl = $(this).data('action-url');
                        
                        // Mark as read via AJAX
                        $.post('@Url.Action("MarkAsRead", "Notifications")', {
                            id: notificationId,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        });
                        
                        // Navigate if action URL is available
                        if (actionUrl && actionUrl !== '#') {
                            window.location.href = actionUrl;
                        }
                    }
                });
                
                // Mark all as read
                $(document).on('click', '#markAllAsReadBtn', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    $.post('@Url.Action("MarkAllAsRead", "Notifications")', {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    }, function() {
                        loadNotifications();
                    });
                });
                
                // Check for new notifications every minute
                setInterval(updateNotificationCount, 60000);
                
                // Initial count check
                updateNotificationCount();
                
                function loadNotifications() {
                    $('#notifications-container').load('@Url.Action("GetNotificationsPartial", "Notifications")', function() {
                        updateNotificationCount();
                    });
                }
                
                function updateNotificationCount() {
                    $.get('@Url.Action("GetUnreadCount", "Notifications")', function(data) {
                        const count = data.count;
                        const countElement = $('#notification-count');
                        
                        if (count > 0) {
                            countElement.text(count).show();
                        } else {
                            countElement.text('0').hide();
                        }
                    });
                }
            });
        </script>
