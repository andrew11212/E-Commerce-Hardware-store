            margin-top: 0.5rem;
            border: none;
            box-shadow: 0 4px 6px var(--shadow-color);
            border-radius: 8px;
            padding: 0.5rem;
        }

        .dropdown-item {
            padding: 0.5rem 1rem;
            border-radius: 6px;
            transition: all 0.2s ease;
        }

        .dropdown-item:hover {
            background-color: var(--primary-color);
            color: white;
            transform: translateX(5px);
        }

        .dropdown-divider {
            margin: 0.5rem 0;
            border-color: var(--border-color);
        }

        .navbar {
            position: relative;
            z-index: 1000;
        }

        .navbar .dropdown-menu {
            position: absolute;
            top: 100%;
            left: 0;
            min-width: 200px;
        }

        .search-container .dropdown-item {
            padding: 0.5rem 1rem;
            font-size: 0.9rem;
            display: block;
            text-decoration: none;
            color: #333;
        }

        .search-container .dropdown-item.active,
        .search-container .dropdown-item:hover {
            background-color: #f8f9fa;
            color: #333;
            font-weight: 500;
        }

        /* Make the caret smaller and aligned properly */
        .search-container .dropdown-toggle::after {
            margin-left: 0.5rem;
            vertical-align: middle;
            border-top: 0.3em solid;
            border-right: 0.3em solid transparent;
            border-left: 0.3em solid transparent;
        }

        /* Add some polish to the search button */
        .search-container .search-btn i {
            font-size: 0.9rem;
        }

        /* Content Management Dropdown specific styles */
        .navbar-nav .dropdown .dropdown-menu {
            margin-top: 0.25rem;
            border: none;
            box-shadow: 0 5px 15px rgba(0, 0, 0, 0.15);
            border-radius: 8px;
            overflow: hidden;
            z-index: 1060;
            /* Higher than default to prevent overlap */
        }

        .navbar-nav .dropdown-item {
            padding: 0.75rem 1.25rem;
            font-weight: 500;
            transition: all 0.2s ease;
            border-radius: 0;
        }

        .navbar-nav .dropdown-item:hover {
            transform: translateX(8px);
            background-color: rgba(255, 255, 255, 0.1);
        }

        .navbar-nav .dropdown-item i {
            transition: transform 0.2s ease;
        }

        .navbar-nav .dropdown-item:hover i {
            transform: scale(1.2);
        }

        /* Notification styles */
        .notifications-dropdown {
            width: 350px;
            max-height: 500px;
            overflow-y: auto;
            padding: 0;
        }
        
        .notification-item {
            transition: background-color 0.2s ease;
            border-left: 3px solid transparent;
            cursor: pointer;
        }
        
        .notification-item:hover {
            background-color: rgba(0, 0, 0, 0.02);
        }
        
        .notification-icon {
            width: 40px;
            text-align: center;
            font-size: 1.25rem;
        }
        
        .notification-badge {
            position: absolute;
            top: 0;
            right: 0;
            font-size: 0.7rem;
            padding: 0.25rem 0.45rem;
            border-radius: 50%;
            background-color: #dc3545;
            color: white;
            transform: translate(25%, -25%);
        }

        .search-container .input-group.focused {
            box-shadow: 0 5px 20px rgba(0, 123, 255, 0.15);
            transform: translateY(-2px);
        }
        
        .search-container .form-select.changed {
            animation: flash 0.3s ease;
        }
        
        @@keyframes flash {
            0% { background-color: #e6f0ff; }
            100% { background-color: transparent; }
        }
    </style>
    
    @await RenderSectionAsync("Styles", required: false)

</head>

