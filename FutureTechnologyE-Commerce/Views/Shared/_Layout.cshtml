    <script>
        // Category dropdown functionality
        $(document).ready(function () {
            // Close notification dropdown when scrolling to navbar
            $(window).on('scroll', function() {
                var notificationDropdown = $('.notification-dropdown-parent').find('.dropdown-menu');
                var isOpen = notificationDropdown.hasClass('show');
                var navbarTop = $('.navbar').offset().top;
                
                if (isOpen && $(window).scrollTop() > navbarTop - 150) {
                    $('#notificationsDropdown').dropdown('hide');
                }
            });
            
            // Handle dropdown item selection for search - target only the search dropdown items
            $('.search-category-dropdown .dropdown-item').click(function (e) {
                e.preventDefault();
                var selectedValue = $(this).data('value');
                var selectedText = $(this).text().trim();
                
                $('#searchCategoryDropdown').text(selectedText);
                $('#selectedCategory').val(selectedValue);
            });

            // Fix notification dropdown position
            $('#notificationsDropdown').parent().on('show.bs.dropdown', function() {
                setTimeout(function() {
                    var dropdown = $(this).find('.dropdown-menu');
                    var navbarHeight = $('.navbar').outerHeight();
                    var topOffset = $(this).offset().top + $(this).height() + 8;
                    
                    // If the dropdown would overlap the navbar
                    if (topOffset + 300 > $(window).scrollTop() + navbarHeight) {
                        // End the dropdown early and restore when scrolling
                        $(window).on('scroll.notificationDropdown', function() {
                            if ($(window).scrollTop() > topOffset + 150) {
                                $('.dropdown-menu.notifications-dropdown').css('display', 'none');
                                $('#notificationsDropdown').dropdown('hide');
                                $(window).off('scroll.notificationDropdown');
                            }
                        });
                    }
                    
                    dropdown.css({
                        'z-index': '1060'
                    });
                }.bind(this), 0);
            });

            // Fix the Content Management dropdown positioning
            $('.navbar-nav .dropdown').on('show.bs.dropdown', function () {
                $(this).find('.dropdown-menu').css({
                    'display': 'block',
                    'opacity': 0
                }).animate({
                    'opacity': 1,
                    'margin-top': '0.25rem'
                }, 200);
            });

            // Smooth hide animation
            $('.navbar-nav .dropdown').on('hide.bs.dropdown', function () {
                $(this).find('.dropdown-menu').animate({
                    'opacity': 0,
                    'margin-top': '0'
                }, 200, function () {
                    $(this).css('display', 'none');
                });
                return false; // This prevents the immediate hide, allowing our animation to complete
            });

            // Auto-close when clicking outside
            $(document).on('click', function (e) {
                if (!$(e.target).closest('.dropdown').length) {
                    // Only close navbar dropdowns, not all dropdowns
                    $('.navbar-nav .dropdown .dropdown-menu').css({
                        'display': 'none',
                        'opacity': 0,
                        'margin-top': '0'
                    });
                }
            });
        });
    </script>

    @if (SignInManager.IsSignedIn(User))
    {
        <script>
            $(document).ready(function() {
                // Position notification dropdown properly
                function positionNotificationDropdown() {
                    var notificationButton = $('#notificationsDropdown');
                    var notificationDropdown = notificationButton.next('.dropdown-menu');
                    var buttonPosition = notificationButton.offset();
                    
                    if ($(window).width() < 768) {
                        // Mobile positioning
                        notificationDropdown.css({
                            'position': 'fixed',
                            'top': buttonPosition.top + notificationButton.outerHeight(),
                            'right': '10px',
                            'width': '300px',
                            'max-height': '450px'
                        });
                    } else {
                        // Desktop positioning - let Bootstrap handle it
                        notificationDropdown.css({
                            'position': 'absolute',
                            'right': '0',
                            'left': 'auto'
                        });
                    }
                }
                
                // Adjust position when dropdown is shown
                $('#notificationsDropdown').on('shown.bs.dropdown', function() {
                    positionNotificationDropdown();
                });
                
                // Handle window resize
                $(window).on('resize', function() {
                    if ($('.notifications-dropdown').is(':visible')) {
                        positionNotificationDropdown();
                    }
                });
                
                // Load notifications on page load
                loadNotifications();
                
                // Load notifications when dropdown is opened
                $('#notificationsDropdown').on('show.bs.dropdown', function() {
                    loadNotifications();
                });
                
                // Mark notification as read when clicked
                $(document).on('click', '.notification-item', function(e) {
                    // Don't trigger if clicking buttons or links
                    if ($(e.target).closest('button, a').length === 0) {
                        const notificationId = $(this).data('notification-id');
                        const actionUrl = $(this).data('action-url');
                        
                        // Mark as read via AJAX
                        $.post('@Url.Action("MarkAsRead", "Notifications")', {
                            id: notificationId,
                            __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                        });
                        
                        // Navigate if action URL is available
                        if (actionUrl && actionUrl !== '#') {
                            window.location.href = actionUrl;
                        }
                    }
                });
                
                // Mark all as read
                $(document).on('click', '#markAllAsReadBtn', function(e) {
                    e.preventDefault();
                    e.stopPropagation();
                    
                    $.post('@Url.Action("MarkAllAsRead", "Notifications")', {
                        __RequestVerificationToken: $('input[name="__RequestVerificationToken"]').val()
                    }, function() {
                        loadNotifications();
                    });
                });
                
                // Check for new notifications every minute
                setInterval(updateNotificationCount, 60000);
                
                // Initial count check
                updateNotificationCount();
                
                function loadNotifications() {
                    $('#notifications-container').load('@Url.Action("GetNotificationsPartial", "Notifications")', function() {
                        updateNotificationCount();
                    });
                }
                
                function updateNotificationCount() {
                    $.get('@Url.Action("GetUnreadCount", "Notifications")', function(data) {
                        const count = data.count;
                        const countElement = $('#notification-count');
                        
                        if (count > 0) {
                            countElement.text(count).show();
                        } else {
                            countElement.text('0').hide();
                        }
                    });
                }
            });
        </script>
