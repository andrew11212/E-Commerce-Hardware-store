<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FutureTechnology</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

    <style>


        /* Contact Bar Base Styles */
        .contact-bar {
            background-color: #030a53;
            color: white;
            padding: 0.75rem 0;
            font-size: 0.875rem;
        }

            .contact-bar .container {
                display: flex;
                justify-content: space-between;
                align-items: center;
                flex-wrap: wrap;
                gap: 1rem;
            }

            .contact-bar a {
                color: white;
                transition: color 0.3s;
                margin: 0 0.5rem;
            }

                .contact-bar a:hover {
                    color: #0d6efd;
                    text-decoration: none;
                }

        .contact-info {
            display: flex;
            align-items: center;
            gap: 1.5rem;
            flex: 1 1 50%;
        }

        .quick-links {
            display: flex;
            gap: 1.5rem;
            flex-wrap: wrap;
            justify-content: flex-end;
            flex: 1 1 50%;
        }

        /* Responsive Improvements */
        @@media (max-width: 992px) {
            .contact-bar .container {
                flex-direction: column;
                text-align: center;
            }

            .contact-info, .quick-links {
                flex: 1 1 100%;
                justify-content: center;
                gap: 0.75rem;
            }

            .quick-links {
                flex-wrap: wrap;
                margin-top: 0.5rem;
            }

                .quick-links a {
                    padding: 0.5rem 1rem;
                    margin: 0.25rem;
                    white-space: nowrap;
                }
        }

        @@media (max-width: 576px) {
            .contact-bar {
                font-size: 0.75rem;
                padding: 1rem 0;
            }

            .contact-info {
                gap: 1rem;
            }

            .quick-links a {
                flex: 1 1 45%;
                margin: 0.25rem 0;
            }
        }


        /* Top Brand */
        .top-brand {
            background-color: #1125ab;
            padding: 1rem 0;
        }

        .navbar-brand {
            font-weight: 600;
            letter-spacing: 1px;
            color: white !important;
            font-size: xx-large;
            text-transform: uppercase;
            transition: font-size 0.3s;
        }

        .nav-link {
            padding: 0.75rem 1.25rem;
            border-radius: 8px;
            transition: background 0.3s;
        }

            .nav-link:hover {
                background: var(--light);
                color: var(--primary);
            }

        /* Search */
        .search-container {
            position: relative;
            width: 100%;
            max-width: 400px;
            transition: all 0.3s;
        }

        .search-btn {
            padding: 0.375rem 0.75rem;
            border: 2px solid var(--primary);
            background: transparent;
            color: var(--primary);
            transition: all 0.3s;
        }

            .search-btn:hover {
                background: var(--primary);
                color: white;
            }

        /* Footer */
        .footer {
            background-color: var(--light);
            padding: 2rem 0;
        }

        /* Responsive Fixes */
        @@media (max-width: 992px) {
            .contact-bar .container {
                flex-direction: column;
                align-items: center;
                text-align: center;
            }

            .contact-info, .quick-links {
                flex-direction: column;
                align-items: center;
            }

            .contact-bar a {
                margin: 0.25rem 0;
            }

            .navbar-brand {
                font-size: large;
            }

            .top-brand .container {
                flex-wrap: wrap;
                justify-content: center;
                gap: 1rem;
            }

            .search-container {
                width: 100%;
                order: 2;
                margin-top: 1rem;
            }

            .navbar-collapse {
                flex-basis: 100%;
                order: 1;
            }

            .social-icons {
                justify-content: center !important;
            }

            .nav-item.dropdown {
                text-align: center;
            }
        }

        @@media (max-width: 768px) {
            .contact-bar .container {
                padding: 0 1rem;
            }

            .search-container input {
                width: 100%;
            }

            .search-btn {
                width: 100%;
                margin-top: 0.5rem;
            }

            .footer .col-md-3 {
                flex: 0 0 100%;
                max-width: 100%;
            }

            .footer input[type="email"] {
                width: 100%;
            }

            .top-brand .container {
                padding: 0 1rem;
            }
        }

        @@media (max-width: 576px) {
            .contact-bar {
                font-size: 0.75rem;
            }

            .navbar-brand {
                font-size: medium;
            }

            .top-brand {
                padding: 0.5rem 0;
            }

            .footer .input-group {
                flex-direction: column;
            }

            .footer .form-control {
                margin-bottom: 0.5rem;
            }
        }

        
        /* Language switcher styling */
        .contact-bar .dropdown-toggle {
            background: rgba(255, 255, 255, 0.1);
            border: 1px solid rgba(255, 255, 255, 0.3);
            padding: 0.375rem 0.75rem;
        }

        .contact-bar .dropdown-item {
            min-width: 120px;
            text-align: center;
        }

        .contact-bar .dropdown-menu {
            background: #030a53;
            border: 1px solid rgba(255, 255, 255, 0.2);
        }

        @@media (max-width: 576px) {
            .contact-bar .dropdown {
                margin: 0.5rem 0;
            }
        }



    </style>

</head>

<body>

    <div class="contact-bar">
        <div class="container d-flex justify-content-between align-items-center flex-wrap gap-3">
            <!-- Contact Information -->
            <div class="contact-info">
                <span><i class="bi bi-telephone me-2"></i>+1 800 123 4567</span>
                <span><i class="bi bi-envelope me-2"></i>Yasser_elg_Sh2010@yahoo.com</span>
            </div>

            <!-- Right-aligned elements -->
            <div class="d-flex gap-3 align-items-center">
                <!-- Social Icons -->
                <div class="d-flex gap-3 social-icons">
                    <a href="#" class="text-decoration-none" style="color: #181cf2;">
                        <i class="bi bi-facebook fs-3"></i>
                    </a>
                    <a href="#" class="text-decoration-none"
                       style="background: linear-gradient(45deg, #E1306C, #F56040, #FCAF45, #FFDC80);
                             -webkit-background-clip: text;
                             color: transparent;">
                        <i class="bi bi-instagram fs-3"></i>
                    </a>
                    <a href="https://youtube.com/@@user-yasser1?si=Vzyksk7wFrVUyIdX"
                       class="text-decoration-none" style="color: #FF0000;">
                        <i class="bi bi-youtube fs-3"></i>
                    </a>
                    <a href="@@yasser elgendy" class="text-decoration-none" style="color: #1DA1F2;">
                        <i class="bi bi-twitter fs-3"></i>
                    </a>
                </div>

                <!-- Language Switcher -->
                <div class="dropdown">
                    <button class="btn btn-sm contact-bar dropdown-toggle"
                            type="button"
                            data-bs-toggle="dropdown">
                        <i class="bi bi-globe"></i>
                        @(System.Threading.Thread.CurrentThread.CurrentCulture.Name.StartsWith("ar") ? "العربية" : "English")
                    </button>
                    <ul class="dropdown-menu dropdown-menu-end text-white">
                        <li>
                            <form asp-controller="Language" asp-action="SetLanguage" method="post">
                                <input type="hidden" name="culture" value="en-US" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                <button type="submit" class="dropdown-item text-white">English</button>
                            </form>
                        </li>
                        <li>
                            <form asp-controller="Language" asp-action="SetLanguage" method="post">
                                <input type="hidden" name="culture" value="ar-EG" />
                                <input type="hidden" name="returnUrl" value="@Context.Request.Path" />
                                <button type="submit" class="dropdown-item text-white">العربية</button>
                            </form>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <!-- Top Brand Section -->
    <div class="top-brand">
        <div class="container d-flex flex-wrap justify-content-between align-items-center">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <b>Future Technology Store</b>
            </a>
            <form asp-controller="Search" asp-action="Index" method="get" class="d-flex search-container">
                <input name="query" class="form-control me-2" type="search" placeholder="Search products...">
                <button class="btn search-btn" type="submit">
                    <i class="bi bi-search"></i>
                </button>
            </form>
          
            <div class="d-flex align-items-center gap-3">
                @* <a class="nav-link text-light icon-text-link" asp-controller="Wishlist" asp-action="Index">
                    <i class="bi bi-heart fs-4"></i>
                    <span class="text-light small mb-0">Wishlist</span>
                </a> *@
                <a class="nav-link text-light icon-text-link" asp-controller="Cart" asp-action="Index">
                    <i class="bi bi-cart fs-4"></i>
                    <span class="text-light small mb-0">Cart</span>
                </a>
            </div>
        </div>
    </div>

    <!-- Main Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>

            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" role="button"
                           data-bs-toggle="dropdown" aria-expanded="false">
                            Content Management
                        </a>
                        <ul class="dropdown-menu dropdown-menu-dark">
                            <li>
                                <a class="dropdown-item" asp-controller="Product" asp-action="Index">
                                    <i class="bi bi-box-seam me-2"></i>Products
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" asp-controller="Category" asp-action="Index">
                                    <i class="bi bi-tags me-2"></i>Categories
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>

                            <li>
                                <a class="dropdown-item" asp-controller="Laptops" asp-action="Index">
                                    <i class="bi bi-tags me-2"></i>Laptops
                                </a>
                            </li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <a class="dropdown-item" asp-controller="Brands" asp-action="Index">
                                    <i class="bi bi-tags me-2"></i>Brands
                                </a>
                            </li>
                        </ul>
                    </li>
                </ul>

                

                <div class="d-flex align-items-center ms-3">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>

    <div class="container my-5">
        <main role="main">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row gy-4">
                <div class="col-md-3">
                    <h5 class="fw-bold">About Us</h5>
                    <p class="small text-muted">Your trusted source for quality electronics and tech products.</p>
                </div>
                <div class="col-md-3">
                    <h5 class="fw-bold">Customer Service</h5>
                    <ul class="list-unstyled small">
                        <li><a href="#">Help Center</a></li>
                        <li><a href="#">Shipping & Returns</a></li>
                        <li><a href="#">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5 class="fw-bold">Policies</h5>
                    <ul class="list-unstyled small">
                        <li><a href="#">Privacy Policy</a></li>a
                        <li><a href="#">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5 class="fw-bold">Our Email</h5>
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" placeholder="Yasser_elg_Sh2010@yahoo.com">
                    </div>

                </div>
            </div>
            <hr class="my-4">
            <p class="text-center text-muted mb-0">&copy; 2025 FutureTechnologyE_Commerce</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>