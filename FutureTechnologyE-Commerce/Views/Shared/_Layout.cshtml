<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - FutureTechnology</title>
    <link href="~/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
    <link rel="stylesheet" href="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/css/toastr.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/sweetalert2@11/dist/sweetalert2.min.css">
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.11.5/css/jquery.dataTables.css">

    <style>
        :root {
            --primary: #007bff;
            --secondary: #6c757d;
            --accent: #dc3545;
            --light: #f8f9fa;
            --dark: #343a40;
        }

        .top-brand {
            background-color: #177fe9;
            padding: 1rem;
        }

        .navbar-brand {
            font-weight: 600;
            letter-spacing: 1px;
            color: white !important;
            font-size: xx-large;
            text-transform: uppercase;
        }

        .nav-link {
            padding: 0.75rem 1.25rem;
            border-radius: 8px;
            transition: background 0.3s;
        }

            .nav-link:hover {
                background: var(--light);
                color: var(--primary);
            }

        .search-container {
            position: relative;
            width: 100%;
            max-width: 400px;
        }

        .search-btn {
            padding: 0.375rem 0.75rem;
            border: 2px solid var(--primary);
            background: transparent;
            color: var(--primary);
        }

            .search-btn:hover {
                background: var(--primary);
                color: white;
            }

        .footer {
            background-color: var(--light);
            padding: 2rem 0;
        }

        .wishlist-icon {
            position: relative;
            cursor: pointer;
        }

        @@media (max-width: 768px) {
            .search-container {
                width: 100%;
                margin-top: 1rem;
            }
        }
    </style>
</head>
<body>
    <div class="top-brand">
        <div class="container d-flex justify-content-between align-items-center">
            <a class="navbar-brand" asp-controller="Home" asp-action="Index">
                <b>Future Technology Store</b>
            </a>
            <div class="d-flex gap-3 justify-content-center">
                <!-- Facebook (Blue) -->
                <a href="#"
                   class="text-decoration-none"
                   style="color: #181cf2;">
                    <i class="bi bi-facebook fs-3"></i>
                </a>

                <!-- Instagram (Gradient) -->
                <a href="#"
                   class="text-decoration-none"
                   style="color: #E1306C; /* Fallback */
              background: linear-gradient(45deg, #E1306C, #F56040, #FCAF45, #FFDC80);
              -webkit-background-clip: text;
              color: transparent;">
                    <i class="bi bi-instagram fs-3"></i>
                </a>

                <!-- YouTube (Red) -->
                <a href="https://youtube.com/@@user-yasser1?si=Vzyksk7wFrVUyIdX"
                   class="text-decoration-none"
                   style="color: #FF0000;">
                    <i class="bi bi-youtube fs-3"></i>
                </a>

                <!-- Twitter/X (Blue) -->
                <a href="@@yasser elgendy"
                   class="text-decoration-none"
                   style="color: #1DA1F2;">
                    <i class="bi bi-twitter fs-3"></i>
                </a>
            </div>
            <partial name="_LoginPartial" />

            <!-- Wishlist and Cart -->
            <div class="d-flex align-items-center gap-3">
                <a class="nav-link text-light " asp-controller="Wishlist" asp-action="Index">
                    <i class="bi bi-heart fs-4 position-relative"></i>

                </a>
                <a class="nav-link text-light" asp-controller="Cart" asp-action="Index">
                    <i class="bi bi-cart fs-4 position-relative">

                    </i>
                </a>
            </div>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg navbar-dark bg-primary shadow-sm">
        <div class="container">
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#mainNav">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="mainNav">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Index">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Home" asp-action="Privacy">Privacy</a>
                    </li>
                    @if (User.IsInRole(FutureTechnologyE_Commerce.Utility.SD.Role_Admin))
                    {
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" role="button"
                               data-bs-toggle="dropdown" aria-expanded="false">
                                Content Management
                            </a>
                            <ul class="dropdown-menu dropdown-menu-dark">
                                <li>
                                    <a class="dropdown-item" asp-controller="Product" asp-action="Index">
                                        <i class="bi bi-box-seam me-2"></i>Products
                                    </a>
                                </li>
                                <li><hr class="dropdown-divider"></li>
                                <li>
                                    <a class="dropdown-item" asp-controller="Category" asp-action="Index">
                                        <i class="bi bi-tags me-2"></i>Categories
                                    </a>
                                </li>
                            </ul>

                        </li>
                    }
                </ul>

                <form asp-controller="Search" asp-action="Index" method="get" class="d-flex search-container">
                    <input name="query" class="form-control me-2" type="search" placeholder="Search products...">
                    <button class="btn search-btn" type="submit">
                        <i class="bi bi-search"></i>
                    </button>
                </form>

                <!-- Authentication and Cart -->
                <div class="d-flex align-items-center ms-3">
                    <partial name="_LoginPartial" />
                </div>
            </div>
        </div>
    </nav>

    <div class="container my-5">
        <main role="main">
            <partial name="_Notification" />
            @RenderBody()
        </main>
    </div>

    <footer class="footer">
        <div class="container">
            <div class="row gy-4">
                <div class="col-md-3">
                    <h5 class="fw-bold">About Us</h5>
                    <p class="small text-muted">Your trusted source for quality electronics and tech products.</p>
                </div>
                <div class="col-md-3">
                    <h5 class="fw-bold">Customer Service</h5>
                    <ul class="list-unstyled small">
                        <li><a href="#">Help Center</a></li>
                        <li><a href="#">Shipping & Returns</a></li>
                        <li><a href="#">Contact Us</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5 class="fw-bold">Policies</h5>
                    <ul class="list-unstyled small">
                        <li><a href="#">Privacy Policy</a></li>
                        <li><a href="#">Terms of Service</a></li>
                    </ul>
                </div>
                <div class="col-md-3">
                    <h5 class="fw-bold">Newsletter</h5>
                    <div class="input-group mb-3">
                        <input type="email" class="form-control" placeholder="<Yasser_elg_Sh2010@yahoo.com">
                    </div>

                </div>
            </div>
            <hr class="my-4">
            <p class="text-center text-muted mb-0">&copy; 2025 FutureTechnologyE_Commerce</p>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/js/toastr.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@11"></script>
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.js"></script>

    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>