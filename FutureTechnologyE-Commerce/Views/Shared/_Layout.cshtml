    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/slick-carousel@1.8.1/slick/slick-theme.css" />

    <style>
        :root {
            --primary-color: #4a90e2;
            --primary-hover: #357abd;
            --secondary-color: #f8f9fa;
            --text-color: #2c3e50;
            --text-muted: #95a5a6;
            --border-color: #e9ecef;
            --shadow-color: rgba(0, 0, 0, 0.08);
        }

        body {
            font-family: 'Inter', sans-serif;
            color: var(--text-color);
            background-color: #f8f9fa;
        }

        /* Contact Bar Styles */
        .contact-bar {
            background: linear-gradient(135deg, #000598, #ffffff);
            color: #fffbfb;
            padding: 0.75rem 0;
            font-size: 0.875rem;
        }
       

        .contact-bar .container {
            display: flex;
            justify-content: space-between;
            align-items: center;
            flex-wrap: wrap;
            gap: 1rem;
        }

        .contact-info {
            display: flex;
            align-items: center;
            gap: 1.5rem;
        }

        .contact-info span {
            display: flex;
            align-items: center;
            opacity: 0.9;
        }

        .social-icons a {
            color: white;
            opacity: 0.9;
            transition: all 0.3s ease;
            padding: 0.5rem;
        }

        .social-icons a:hover {
            opacity: 1;
            transform: translateY(-2px);
        }

        /* Top Brand Section */
        .top-brand {
            background-color: white;
            padding: 1rem 0;
            box-shadow: 0 2px 10px var(--shadow-color);
        }

        .navbar-brand {
            font-weight: 600;
            color: var(--text-color);
            font-size: 1.5rem;
        }

        .search-container {
            position: relative;
            max-width: 500px;
            width: 100%;
        }

        .search-container .input-group {
            border-radius: 4px;
            overflow: hidden;
        }

        .search-container .btn-light {
            background-color: #f8f9fa;
            border: 1px solid #dee2e6;
            border-right: none;
            color: #333;
            border-top-right-radius: 0;
            border-bottom-right-radius: 0;
            font-size: 0.9rem;
        }

        .search-container .dropdown-menu {
            border: 1px solid #dee2e6;
            border-radius: 4px;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.1);
            margin-top: 1px;
        }

        .search-container .dropdown-item {
            paddng 05rem 1rem;
            font-size: 0.9rem;
            color: #333;
        }

        .search-container .dropdown-item:hover,
        .search-container .dropdown-item:focus {
            background-color: #f8f9fa;
            color: #333;
            font-weight: 500;
        }

        .search-container .form-control {
            border: 1px solid #dee2e6;
            border-left: none;
            border-right: none;
            box-shadow: none;
        }

        .search-container .form-control:focus {
            box-shadow: none;
            border-color: #dee2e6;
        }

        .search-container .btn-primary {
            border-top-left-radius: 0;
            border-bottom-left-radius: 0;
            background-color: #0d6efd;
            border-color: #0d6efd;
        }

        .search-container .btn-primary:hover {
            background-color: #0b5ed7;
            border-color: #0a58ca;
        }

        /* Main Navigation */
        .navbar {
            background-color: white;
            box-shadow: 0 2px 10px var(--shadow-color);
            padding: 1rem 0;
        }

        .nav-link {
            color: var(--text-color);
            font-weight: 500;
            transition: color 0.2s ease;
            padding: 0.5rem 1rem;
        }

        .nav-link:hover {
            color: var(--primary-color);
        }

        /* Footer */
        .footer {
            background-color: white;
            border-top: 1px solid var(--border-color);
            padding: 3rem 0;
        }

        .footer h5 {
            color: var(--text-color);
            font-weight: 600;
            margin-bottom: 1.5rem;
        }

