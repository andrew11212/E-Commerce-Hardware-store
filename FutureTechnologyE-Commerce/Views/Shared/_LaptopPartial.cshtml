@model List<Laptop>
    <section class="py-5">
        <!-- Full-Width Title Block -->
        <div class="w-100 bg-light py-3">
            <div class="container">
                <div class="d-flex justify-content-between align-items-center">
                    <h3 class="mb-0">Best Selling Products</h3>
                    <a asp-action="Index" asp-controller="Home" class="text-decoration-none text-muted">
                        View All <i class="bi bi-arrow-right"></i>
                    </a>
                </div>
            </div>
        </div>

        @foreach (var laptop in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card h-100 border-0 shadow-sm rounded-3 overflow-hidden transition-transform hover:scale-105">
                    <!-- Optimized Product Image -->
                    <picture>
                        <source srcset="@laptop.ImageUrl?.Replace(".jpg", ".avif")" type="image/avif">
                        <source srcset="@laptop.ImageUrl" type="image/jpeg">
                        <img src="@laptop.ImageUrl"
                             class="card-img-top object-fit-cover aspect-ratio-4-3"
                             alt="@laptop.Name"
                             loading="lazy"
                             onerror="this.src='/images/placeholder.avif'">
                    </picture>

                    <div class="card-body d-flex flex-column">
                        <h5 class="card-title fw-semibold text-truncate-2 mb-2">
                            @laptop.Name
                        </h5>

                        <div class="d-flex justify-content-between align-items-center mb-3">
                            <div>
                                <span class="text-primary fw-bold fs-5">@laptop.Price.ToString("C")</span>
                                <del class="text-muted small ms-2">@((laptop.Price * 1.2m).ToString("C"))</del>
                            </div>
                            <div>
                                <span class="text-primary fw-bold fs-5">@laptop.Processor)</span>
                                <del class="text-muted small ms-2">@((laptop.Processor))</del>
                            </div>
                            <div>
                                <span class="text-primary fw-bold fs-5">@laptop.GraphicsCard)</span>
                                <del class="text-muted small ms-2">@((laptop.GraphicsCard))</del>
                            </div>
                            <div>
                                <span class="text-primary fw-bold fs-5">@laptop.Brand)</span>
                                <del class="text-muted small ms-2">@((laptop.Brand))</del>
                            </div>
                            <span class="badge @(laptop.StockQuantity > 0 ? "bg-success" : "bg-danger") rounded-pill">
                                @(laptop.StockQuantity > 0 ? "In Stock" : "Sold Out")
                            </span>
                        </div>

                        <div class="d-grid gap-2 mt-auto">
                            <a asp-action="Details" asp-route-id="@laptop.ProductID"
                               class="btn btn-outline-primary rounded-pill">
                                View Details
                            </a>

                            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="add-to-cart-form">
                                @Html.AntiForgeryToken()
                                <input type="hidden" name="productId" value="@laptop.ProductID">
                                <button type="submit"
                                        class="btn btn-primary rounded-pill w-100"
                                        @(laptop.StockQuantity == 0 ? "disabled" : "")>
                                    <span class="spinner-border spinner-border-sm d-none" role="status" aria-hidden="true"></span>
                                    <span class="btn-text">Add to Cart <i class="bi bi-cart-plus ms-2"></i></span>
                                </button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        }
    </section>