@model FutureTechnologyE_Commerce.Models.Laptop

@{
    ViewData["Title"] = "Delete Laptop";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow border-danger rounded-4">
                <div class="card-header bg-danger bg-opacity-10 border-bottom-0">
                    <h3 class="fw-bold text-danger mb-0 d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i> Confirm Deletion
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="text-center text-danger mb-4">
                        <p class="lead fw-bold mb-0">Are you sure you want to delete this laptop?</p>
                        <small class="text-muted">This action cannot be undone</small>
                    </div>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Product ID</dt>
                        <dd class="col-sm-8 mb-3">@Model.ProductID</dd>

                        <dt class="col-sm-4 text-muted">Name</dt>
                        <dd class="col-sm-8 mb-3">@Model.Name</dd>

                        <dt class="col-sm-4 text-muted">Brand</dt>
                        <dd class="col-sm-8 mb-3">@Model.Brand?.Name</dd>

                        <dt class="col-sm-4 text-muted">Category</dt>
                        <dd class="col-sm-8 mb-3">@Model.Category?.Name</dd>

                        <dt class="col-sm-4 text-muted">Processor</dt>
                        <dd class="col-sm-8 mb-3">@Model.Processor</dd>

                        <dt class="col-sm-4 text-muted">RAM</dt>
                        <dd class="col-sm-8 mb-3">@Model.RAM GB</dd>

                        <dt class="col-sm-4 text-muted">Storage</dt>
                        <dd class="col-sm-8 mb-3">@Model.Storage</dd>

                        <dt class="col-sm-4 text-muted">Screen</dt>
                        <dd class="col-sm-8 mb-3">@Model.ScreenSize"</dd>

                        <dt class="col-sm-4 text-muted">Graphics</dt>
                        <dd class="col-sm-8 mb-3">@Model.GraphicsCard</dd>

                        <dt class="col-sm-4 text-muted">Price</dt>
                        <dd class="col-sm-8 mb-3">EGP @Model.Price.ToString("0.00")</dd>

                        <dt class="col-sm-4 text-muted">Stock</dt>
                        <dd class="col-sm-8 mb-3">@Model.StockQuantity</dd>
                    </dl>
                </div>
                <div class="card-footer bg-white border-top-0">
                    <form asp-controller="Laptops" asp-action="Delete">
                        <input type="hidden" asp-for="ProductID" />
                        <div class="d-flex gap-3 flex-column flex-md-row">
                            <button type="submit" class="btn btn-lg btn-danger w-100 rounded-pill">
                                <i class="bi bi-trash3 me-2"></i>Yes, Delete Permanently
                            </button>
                            <a asp-action="Index" class="btn btn-lg btn-outline-secondary w-100 rounded-pill">
                                <i class="bi bi-arrow-left me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


    <style>
        .card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
        }

            .card:hover {
                transform: translateY(-2px);
                box-shadow: 0 10px 20px rgba(220, 53, 69, 0.15);
            }

        .dl-horizontal dt {
            width: 160px;
        }

        .dl-horizontal dd {
            margin-left: 180px;
            margin-bottom: 1rem;
        }

        @@media (max-width: 768px) {
            .dl-horizontal dt {
                float: none;
                width: auto;
                text-align: left;
            }

            .dl-horizontal dd {
                margin-left: 0;
            }
        }
    </style>
}

@section Scripts {
    <script>
        // Add danger button animation
        document.querySelector('.btn-danger').addEventListener('mouseover', function() {
            this.style.transform = 'scale(1.02)';
            this.style.boxShadow = '0 2px 4px rgba(220,53,69,0.4)';
        });

        document.querySelector('.btn-danger').addEventListener('mouseout', function() {
            this.style.transform = 'scale(1)';
            this.style.boxShadow = 'none';
        });
    </script>
}