@model Laptop
<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-lg-10">
            <div class="card shadow-lg border-0 rounded-4">
                <div class="card-header bg-dark bg-gradient text-white rounded-top-4">
                    <h3 class="mb-0">@($"{(Model.ProductID != 0 ? "Update" : "Create")} Laptop")</h3>
                </div>
                <div class="card-body p-4">
                    <form asp-controller="Laptops" asp-action="@(Model.ProductID != 0 ? "Edit" : "Create")"
                          method="post" enctype="multipart/form-data" class="row g-3">
                        @Html.AntiForgeryToken()
                        <input type="hidden" asp-for="ProductID" />
                        <input type="hidden" asp-for="ImageUrl" />

                        <div class="col-12">
                            <div class="form-floating">
                                <input asp-for="Name" class="form-control border-0 shadow-sm" placeholder="Product Name" />
                                <label asp-for="Name" class="form-label"></label>
                                <span asp-validation-for="Name" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <textarea asp-for="Description" class="form-control border-0 shadow-sm"
                                          placeholder="Description" style="height: 150px"></textarea>
                                <label asp-for="Description" class="form-label"></label>
                                <span asp-validation-for="Description" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="Price" class="form-control border-0 shadow-sm" placeholder="Price"
                                       type="number" step="0.01" />
                                <label asp-for="Price" class="form-label"></label>
                                <span asp-validation-for="Price" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-md-6">
                            <div class="form-floating">
                                <input asp-for="StockQuantity" class="form-control border-0 shadow-sm"
                                       placeholder="Stock Quantity" type="number" />
                                <label asp-for="StockQuantity" class="form-label"></label>
                                <span asp-validation-for="StockQuantity" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-12">
                            <h5 class="text-muted mb-3">Technical Specifications</h5>
                            <div class="row g-3">
                                <div class="col-md-4">
                                    <div class="form-floating">
                                        <input asp-for="Processor" class="form-control border-0 shadow-sm"
                                               placeholder="Processor" />
                                        <label asp-for="Processor" class="form-label"></label>
                                        <span asp-validation-for="Processor" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-floating">
                                        <input asp-for="RAM" class="form-control border-0 shadow-sm"
                                               placeholder="RAM" />
                                        <label asp-for="RAM" class="form-label"></label>
                                        <span asp-validation-for="RAM" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-4">
                                    <div class="form-floating">
                                        <input asp-for="Storage" class="form-control border-0 shadow-sm"
                                               placeholder="Storage" />
                                        <label asp-for="Storage" class="form-label"></label>
                                        <span asp-validation-for="Storage" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="ScreenSize" class="form-control border-0 shadow-sm"
                                               placeholder="Screen Size" type="number" step="0.1" />
                                        <label asp-for="ScreenSize" class="form-label"></label>
                                        <span asp-validation-for="ScreenSize" class="text-danger"></span>
                                    </div>
                                </div>
                                <div class="col-md-6">
                                    <div class="form-floating">
                                        <input asp-for="GraphicsCard" class="form-control border-0 shadow-sm"
                                               placeholder="Graphics Card" />
                                        <label asp-for="GraphicsCard" class="form-label"></label>
                                        <span asp-validation-for="GraphicsCard" class="text-danger"></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="col-12">
                            <div class="form-floating">
                                <input type="file" name="file" class="form-control border-0 shadow-sm"
                                       accept="image/*" onchange="previewImage(event)" />
                                <label asp-for="ImageUrl" class="form-label"></label>
                            </div>
                            <div class="mt-3">
                                <img id="imagePreview" src="@Model.ImageUrl"
                                     class="img-thumbnail rounded-3"
                                     style="max-height: 200px; @(string.IsNullOrEmpty(Model.ImageUrl) ? "display: none;" : "display: block;")" />
                            </div>
                        </div>
                        <div class="col-12 d-flex justify-content-between">
                            <a asp-controller="Laptops" asp-action="Index"
                               class="btn btn-lg btn-secondary rounded-pill px-4">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-lg btn-primary rounded-pill px-4">
                                <i class="bi bi-save"></i> @($"{(Model.ProductID != 0 ? "Update" : "Create")} Laptop")
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        // Image preview handler
        function previewImage(event) {
            const reader = new FileReader();
            reader.onload = function () {
                const preview = document.getElementById('imagePreview');
                preview.src = reader.result;
                preview.style.display = 'block';
            }
            reader.readAsDataURL(event.target.files[0]);
        }
        // Show initial image if it exists during edit
        document.addEventListener('DOMContentLoaded', function () {
            const imagePreview = document.getElementById('imagePreview');
            if (imagePreview.src && imagePreview.src !== window.location.href) {
                imagePreview.style.display = 'block';
            }
        });
    </script>
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}