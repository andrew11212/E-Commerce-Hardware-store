}

<!-- Hero Carousel -->
<div class="hero-carousel fade-in mb-5">
    <div id="mainCarousel" class="carousel slide" data-bs-ride="carousel">
        <div class="carousel-inner">
            @if (Model.Promotions != null && Model.Promotions.Any())
            {
                var firstPromotion = true;
                foreach (var promotion in Model.Promotions.OrderBy(p => p.DisplayOrder).Take(3))
                {
                    <div class="carousel-item @(firstPromotion ? "active" : "")">
                        <div class="carousel-content">
                            <img src="@promotion.ImageUrl" alt="@promotion.Title"
                                 class="carousel-image" onerror="this.src='/images/placeholder.svg'">
                            <div class="carousel-overlay"></div>
                            <div class="carousel-caption">
                                <h2 class="display-4 fw-bold mb-3 animate__animated animate__fadeInDown">@promotion.Title</h2>
                                <p class="lead mb-4 animate__animated animate__fadeInUp">@promotion.Description</p>
                                @if (promotion.ProductId.HasValue)
                                {
                                    <a asp-controller="Home" asp-action="Details" asp-route-id="@promotion.ProductId" class="btn btn-primary btn-lg animate__animated animate__fadeInUp">
                                        View Product <i class="bi bi-arrow-right ms-2"></i>
                                    </a>
                                }
                            </div>
                        </div>
                    </div>
                    firstPromotion = false;
                }
            }
            else
            {
                <!-- Default Slide 1 (shown when no promotions exist) -->
                <div class="carousel-item active">
                    <div class="carousel-content">
                        <img src="/images/ASUS TUF Gaming F15 Gaming Laptop.jpeg" alt="ASUS TUF Gaming F15"
                             class="carousel-image">
                        <div class="carousel-overlay"></div>
                        <div class="carousel-caption">
                            <h2 class="display-4 fw-bold mb-3 animate__animated animate__fadeInDown">ASUS TUF Gaming F15</h2>
                            <p class="lead mb-4 animate__animated animate__fadeInUp">Experience unrivaled gaming performance with the latest technology</p>
                            <a asp-controller="Laptops" asp-action="Details" asp-route-id="@Model.Laptops.FirstOrDefault()?.ProductID" class="btn btn-primary btn-lg animate__animated animate__fadeInUp">
                                Explore Now <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Default Slide 2 -->
                <div class="carousel-item">
                    <div class="carousel-content">
                        <img src="/images/ASUS TUF GAMING F15.jpeg" alt="ASUS TUF Gaming Series" class="carousel-image">
                        <div class="carousel-overlay"></div>
                        <div class="carousel-caption">
                            <h2 class="display-4 fw-bold mb-3 animate__animated animate__fadeInDown">ASUS TUF Gaming Series</h2>
                            <p class="lead mb-4 animate__animated animate__fadeInUp">Built for durability, designed for victory</p>
                            <a asp-controller="Laptops" asp-action="Details" asp-route-id="@Model.Laptops.FirstOrDefault()?.ProductID" class="btn btn-primary btn-lg animate__animated animate__fadeInUp">
                                Learn More <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>

                <!-- Default Slide 3 -->
                <div class="carousel-item">
                    <div class="carousel-content">
                        <img src="/images/Pc Portable Gamer ASUS TUF F15 _ 15_6″ _ Intel i7 _ RTX 4060 _ 8 Go Ram.jpeg"
                             alt="RTX 4060 Gaming Laptop" class="carousel-image">
                        <div class="carousel-overlay"></div>
                        <div class="carousel-caption">
                            <h2 class="display-4 fw-bold mb-3 animate__animated animate__fadeInDown">RTX 4060 Gaming Laptop</h2>
                            <p class="lead mb-4 animate__animated animate__fadeInUp">Powered by NVIDIA RTX 4060 for ultimate gaming performance</p>
                            <a asp-controller="Laptops" asp-action="Details" asp-route-id="@Model.Laptops.FirstOrDefault()?.ProductID" class="btn btn-primary btn-lg animate__animated animate__fadeInUp">
                                Shop Now <i class="bi bi-arrow-right ms-2"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>

        <!-- Carousel Controls -->
        <button class="carousel-control-prev" type="button" data-bs-target="#mainCarousel" data-bs-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Previous</span>
        </button>
        <button class="carousel-control-next" type="button" data-bs-target="#mainCarousel" data-bs-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="visually-hidden">Next</span>
        </button>

        <!-- Carousel Indicators -->
        <div class="carousel-indicators">
            @if (Model.Promotions != null && Model.Promotions.Any())
            {
                for (int i = 0; i < Math.Min(Model.Promotions.Count(), 3); i++)
                {
                    <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="@i" class="@(i == 0 ? "active" : "")"></button>
                }
            }
            else
            {
                <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="0" class="active"></button>
                <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="1"></button>
                <button type="button" data-bs-target="#mainCarousel" data-bs-slide-to="2"></button>
            }
        </div>
    </div>
</div>

