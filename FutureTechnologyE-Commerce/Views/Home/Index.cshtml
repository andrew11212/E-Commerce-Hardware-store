@model IEnumerable<Product>
@{
    ViewData["Title"] = "Home Page";
}

<!-- Product Grid --><section class="container py-5">
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h3 class="mb-0">Featured Products</h3>
        <a asp-action="index" asp-controller="Home" class="text-decoration-none text-muted">View All <i class="bi bi-arrow-right"></i></a>
    </div>

    <div class="row g-4">
        @foreach (var product in Model)
        {
            <div class="col-lg-3 col-md-4 col-sm-6">
                <div class="card h-100 border-0 shadow-sm rounded-3 overflow-hidden transition-transform hover:scale-105">
                    <!-- Product Image -->
                    <img src="@product.ImageUrl"
                         class="card-img-top img-fluid"
                         alt="@product.Name"
                         onerror="this.src='/images/placeholder.png'"
                         style="aspect-ratio: 1/1; object-fit: cover;">

                    <!-- Card Body -->
                    <div class="card-body d-flex flex-column justify-content-between">
                        <!-- Product Title -->
                        <h5 class="card-title text-dark fw-semibold text-truncate">@product.Name</h5>

                        <!-- Brand -->
                        <p class="card-text text-muted small text-truncate mb-2">
                            <span class="text-uppercase">Brand:</span> @product.Brand?.Name
                        </p>

                        <!-- Pricing -->
                        <div class="d-flex align-items-center justify-content-between mb-3">
                            <p class="mb-0 text-primary fw-bold">@product.Price.ToString("C")</p>
                            <del class="text-muted small">@((product.Price * 1.2m).ToString("C"))</del>
                        </div>

                        <!-- Stock Status & Actions -->
                        <div class="d-flex justify-content-between align-items-center">
                            <span class="badge @(product.StockQuantity > 0 ? "bg-success" : "bg-danger") rounded-pill">
                                @(product.StockQuantity > 0 ? "In Stock" : "Out of Stock")
                            </span>

                            <a asp-action="Details"
                               asp-controller="Home"
                               asp-route-id="@product.ProductID"
                               class="btn btn-outline-primary btn-sm rounded-pill">
                                View Details
                            </a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>

<!-- Promotion Section -->
<section class="bg-primary bg-gradient text-white py-5">
    <div class="container text-center">
        <h2 class="display-6 fw-bold">Free Shipping on Orders Over $50</h2>
        <p class="lead">Enjoy fast and reliable delivery across the country</p>
    </div>
</section>