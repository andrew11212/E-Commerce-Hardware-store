@using Microsoft.AspNetCore.Identity
@inject SignInManager<ApplicationUser> SignInManager

@using FutureTechnologyE_Commerce.Models.ViewModels
@model HomeIndexViewModel
@{
    ViewData["Title"] = "Home Page";
}

<!-- Hero Carousel -->
