</div>

<!-- Best Selling Products Section -->
<section class="products-section py-5 fade-in">
    <div class="container">
        <div class="section-header mb-4">
            <h2 class="section-title">Best Selling Products</h2>
            <a asp-action="GetAllProducts" asp-controller="Home" class="btn btn-outline-primary">
                View All <i class="bi bi-arrow-right ms-2"></i>
            </a>
        </div>

        <div class="products-carousel">
            <div class="products-slick" data-nav="#products-slick-nav">
                @foreach (var product in Model.Products)
                {
                    <div class="product-item">
                        <div class="product-card h-100">
                            <div class="card shadow-hover">
                                <div class="card-img-wrapper">
                                    <img src="@product.ImageUrl" class="card-img-top" alt="@product.Name"
                                         onerror="this.src='/images/placeholder.avif'">
                                    <div class="product-overlay">
                                        @if (product.GetType().Name == "Laptop")
                                        {
                                            <a asp-controller="Laptops" asp-action="Details" asp-route-id="@product.ProductID" class="btn btn-light btn-sm">
                                                View Details
                                            </a>
                                        }
                                        else
                                        {
                                            <a asp-controller="Home" asp-action="Details" asp-route-id="@product.ProductID" class="btn btn-light btn-sm">
                                                View Details
                                            </a>
                                        }
                                    </div>
                                    @if (product.StockQuantity > 0)
                                    {
                                        <span class="badge bg-success position-absolute top-0 end-0 m-3">In Stock</span>
                                    }
                                    else
                                    {
                                        <span class="badge bg-danger position-absolute top-0 end-0 m-3">Sold Out</span>
                                    }
                                </div>
                                <div class="card-body d-flex flex-column">
                                    <h5 class="card-title text-truncate-2">@product.Name</h5>
                                    <div class="price-section mb-3">
                                        <span class="current-price">@product.Price.ToString("N0") EGP</span>
                                        <span class="original-price">@((product.Price * 1.2m).ToString("N0")) EGP</span>
                                    </div>
                                    <div class="mt-auto">
                                        @if (SignInManager.IsSignedIn(User))
                                        {
                                            <form asp-controller="Cart" asp-action="AddToCart" method="post" class="add-to-cart-form">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="productId" value="@product.ProductID" />
                                                <button type="submit" class="btn btn-primary w-100"
                                                        @(product.StockQuantity == 0 ? "disabled" : "")>
                                                    <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                                                    <span class="btn-text">Add to Cart</span>
                                                    <i class="bi bi-cart-plus ms-2"></i>
                                                </button>
                                            </form>
                                        }
                                        else
                                        {
                                            <a asp-controller="Cart" asp-action="RequestAddToCartAfterLogin"
                                               asp-route-productId="@product.ProductID" class="btn btn-primary w-100">
                                                Add to Cart <i class="bi bi-cart-plus ms-2"></i>
                                            </a>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
            <div id="products-slick-nav"></div>
        </div>
    </div>
</section>

