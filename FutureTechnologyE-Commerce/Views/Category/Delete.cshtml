@model FutureTechnologyE_Commerce.Models.Category

@{
    ViewData["Title"] = "Delete Category";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow border-danger rounded-4">
                <div class="card-header bg-danger bg-opacity-10 border-bottom-0">
                    <h3 class="fw-bold text-danger mb-0 d-flex align-items-center">
                        <i class="bi bi-exclamation-triangle-fill me-3 fs-4"></i> Confirm Deletion
                    </h3>
                </div>
                <div class="card-body p-4">
                    <div class="text-center text-danger mb-4">
                        <p class="lead fw-bold mb-0">Are you sure you want to delete this category?</p>
                        <small class="text-muted">This action cannot be undone</small>
                    </div>

                    <dl class="row mb-0">
                        <dt class="col-sm-4 text-muted">Category ID</dt>
                        <dd class="col-sm-8 mb-3">@Model.CategoryID</dd>

                        <dt class="col-sm-4 text-muted">Name</dt>
                        <dd class="col-sm-8 mb-3">@Model.Name</dd>

                        <dt class="col-sm-4 text-muted">Parent Category</dt>
                        <dd class="col-sm-8 mb-3">
                            @(Model.ParentCategory?.Name ?? "None")
                        </dd>
                    </dl>
                </div>
                <div class="card-footer bg-white border-top-0">
                    <form asp-action="Delete">
                        <input type="hidden" asp-for="CategoryID" />
                        <div class="d-flex gap-3 flex-column flex-md-row">
                            <button type="submit" class="btn btn-lg btn-danger w-100 rounded-pill">
                                <i class="bi bi-trash3 me-2"></i>Yes, Delete Permanently
                            </button>
                            <a asp-action="Index" class="btn btn-lg btn-outline-secondary w-100 rounded-pill">
                                <i class="bi bi-arrow-left me-2"></i>Cancel
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script>
        // Add danger button animation
        document.querySelector('.btn-danger').addEventListener('mouseover', function() {
            this.style.transform = 'scale(1.02)';
            this.style.boxShadow = '0 2px 4px rgba(220,53,69,0.4)';
        });

        document.querySelector('.btn-danger').addEventListener('mouseout', function() {
            this.style.transform = 'scale(1)';
            this.style.boxShadow = 'none';
        });
    </script>
}