@model FutureTechnologyE_Commerce.Models.Category

@{
    ViewData["Title"] = "Create Category";
}

<div class="container my-5">
    <div class="row justify-content-center">
        <div class="col-12 col-md-8 col-lg-6">
            <div class="card shadow border-0 rounded-4">
                <div class="card-header bg-white border-bottom-0">
                    <h3 class="fw-bold text-primary mb-0">New Category</h3>
                    <small class="text-muted">Please fill in category details</small>
                </div>
                <div class="card-body p-4">
                    <form asp-action="Create">
                        <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

                        <div class="mb-3">
                            <label asp-for="Name" class="form-label fw-bold">Category Name</label>
                            <div class="input-group">
                                <input asp-for="Name" class="form-control" id="categoryName" placeholder="Category name" required>
                                <button class="btn btn-outline-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    Suggestions
                                </button>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    @foreach (var item in ViewBag.SuggestedCategories)
                                    {
                                        <li><a class="dropdown-item category-suggestion" href="javascript:void(0)" data-value="@item.Text">@item.Text</a></li>
                                    }
                                </ul>
                            </div>
                            <span asp-validation-for="Name" class="text-danger small"></span>
                            <small class="text-muted">Recommended categories: Mouse, Keyboard, Mousepad, Printer</small>
                        </div>

                        <div class="form-floating mb-3">
                            <select asp-for="ParentCategoryID" class="form-select"
                                    asp-items="ViewBag.ParentCategoryID" placeholder="Parent category">
                                <option value="">None</option>
                            </select>
                            <label asp-for="ParentCategoryID" class="form-label"></label>
                            <span asp-validation-for="ParentCategoryID" class="text-danger small"></span>
                        </div>

                        <div class="d-grid gap-2 mt-4">
                            <button type="submit" class="btn btn-lg btn-primary rounded-pill">
                                <i class="bi bi-plus-circle me-2"></i>Create Category
                            </button>
                            <a asp-action="Index" class="btn btn-outline-secondary rounded-pill">
                                <i class="bi bi-arrow-left me-2"></i>Back to List
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
    
@section Scripts {
    <script>
        // Add smooth transitions to form elements
        document.querySelectorAll('.form-control, .form-select').forEach(input => {
            input.addEventListener('focus', () => {
                input.closest('.form-floating')?.classList.add('focused');
            });
            input.addEventListener('blur', () => {
                input.closest('.form-floating')?.classList.remove('focused');
            });
        });

        // Handle category suggestion selection
        document.querySelectorAll('.category-suggestion').forEach(item => {
            item.addEventListener('click', function() {
                document.getElementById('categoryName').value = this.getAttribute('data-value');
            });
        });
    </script>
}